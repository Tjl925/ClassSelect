.responded {
    position: absolute;
    background-color: #1AAD19;
    border-radius: 8px;
    color: white;
    margin-top: 2px;
    padding-left: 5px;
    padding-right: 5px;
    padding-up: 1px;
    padding-bottom: 1px;
    font-size: 18px;
    left: 30%;
}
